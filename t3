import random
from datetime import datetime, timedelta, time

d = [
    "Sara", "Nazi", "Maryam", "Zahra", "Elham",
    "Parisa", "Niloofar", "Haniye", "Fateme", "Reyhane"
]

p = [
    "Ali", "Reza", "Hossein", "Amir", "Mehdi",
    "Mohammad", "Arman", "Sina", "Pouya", "Milad"
]

random.shuffle(p)

start_date = datetime(2024, 6, 1)   # Ø´Ø±ÙˆØ¹ Ø§Ø² 1 Ú˜ÙˆØ¦Ù† 2024
gap = 10

print("Blind Date Schedule:\n")

for i in range(10):
    date = start_date + timedelta(days=i*gap)
    # Ø³Ø§Ø¹Øª Ø±Ù†Ø¯ÙˆÙ… Ø¨ÛŒÙ† 18 ØªØ§ 21
    hour = random.randint(18, 21)
    minute = random.choice([0, 15, 30, 45])
    date_time = date.replace(hour=hour, minute=minute)

    print(f"{date_time.strftime('%Y-%m-%d %H:%M')} - {d[i]} ðŸ’‘ {p[i]}")
